{
  "entrypoint": "index.html",
  "shell": "src/ss-app.html",
  "fragments": [
    "src/memories/ss-memories.html",
    "src/landmarks/ss-landmarks.html",
    "src/404/ss-404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
